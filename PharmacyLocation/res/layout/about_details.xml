<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <ImageView 
         android:id="@+id/appImage"
         android:layout_centerInParent="true"
         android:layout_alignParentTop="true"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pharmacy" />
    
    <TextView
        android:id="@+id/version"
        android:layout_below="@+id/appImage"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0 (2014-09-30)" />
    
    <TextView
        android:id="@+id/copyright"
        android:layout_below="@+id/version"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@+string/copyright" />
    
    <TextView
        android:id="@+id/webSite"
        android:layout_below="@+id/copyright"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@+string/webSiteHtml"/>
    
    <TextView
        android:id="@+id/devWebSite"
        android:layout_below="@+id/webSite"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@+string/devWebSiteHtml"/>
    
    <ImageView
    android:id="@+id/imageView2"
    android:layout_below="@+id/devWebSite"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="20dp"
    android:background="@android:color/holo_blue_bright" />
    
    <TextView
        android:id="@+id/feedback"
        android:layout_below="@+id/imageView2"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@+string/feedback"/>
    
    <TextView
        android:id="@+id/tellus"
        android:layout_below="@+id/feedback"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/tellus" />
    
        
        <Button
            android:layout_below="@+id/tellus"
            android:background="@drawable/round_corner_button"
            android:id="@+id/btnRateus"
            android:layout_marginTop="30dp"
            android:clickable="true"
  android:layout_width="fill_parent"
  android:src="@drawable/rateusbutton"
  android:layout_height="wrap_content"
  android:drawableLeft="@drawable/ic_star"
  android:gravity="center_vertical|left"
  android:text="@+string/rateus"
  android:textColor="#040404"
                android:textSize="22dip"
                android:textStyle="bold"
                android:typeface="sans"/>
        
